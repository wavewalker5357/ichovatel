<% @post.tags.build %>
<%= form_for(@post) do |post_form| %>
  <% if @post.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= post_form.label "Stanice *" %><br />
    <%= post_form.text_field :name %>
  </div>
  <div class="field">
    <%= post_form.label "Adresa *" %><br />
    <%= post_form.text_field :title %>
  </div>
  <div class="field">
    <%= post_form.label "Text" %><br />
    <!-- <%= post_form.text_area :content, :class => "tinymce" %> -->
    <%= post_form.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
  </div>
  
    <div class="field">
    <%= post_form.label "Kategorie"%><br />
    <%= post_form.collection_select(:category_id, @categories, :id, :name) %>
  </div>
  
  <h2>Druh zvířete</h2>
  <%= render :partial => 'tags/form',
             :locals => {:form => post_form} %>
  <div class="actions">
    <%= post_form.submit %>
  </div>
  <div class="notice">
  	* jsou povinné
  	</div>
<% end %>



