<!DOCTYPE html>
<html>
<head>
  <title>iChovatel - administrace</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= tinymce %>

  <%= yield :javascript %>
</head>
<body>

	<div class="navbar navbar-inverse navbar-custom">
		<div class="navbar-inner">
			<%= link_to "Chovatelské stanice", home_path, { :class=>"brand" } %>
			<ul class="nav">
				<li><%= link_to "Domů", home_path %></li>
				<li><%= link_to 'Nová stanice', new_post_path %></li>
				<li><%= link_to 'Správa kategorií', categories_path %></li>
			</ul>
			<%= form_tag posts_path, :class=>"navbar-form pull-left" , :method => :get do %>
			<div class="input-append">
			  <%= text_field_tag :search, params[:search], { :class=>"span2" } %>
			  <%= submit_tag "Hledat!", { :class=>"btn" } %>
			</div>
			<% end %> 
		</div>
	</div>
	<div class="container-fluid">
		<%= yield %>
	</div>
</body>
</html>
