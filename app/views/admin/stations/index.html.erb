  </tr>
 
<% @stations.each do |station| %>
  <tr>
    <td><%= station.title %></td>
    <td><%= station.content %></td>
    <td><%= link_to 'Show', station %></td>
    <td><%= link_to 'Edit', edit_station_path(station) %></td>
    <td><%= link_to 'Remove', station, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
